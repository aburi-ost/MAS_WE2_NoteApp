<button id="updateButton" form="updateEntryForm" type="submit" formaction="/details?redirect=false" formmethod="POST">Update</button>
<button id="updateAndOverviewButton" form="updateEntryForm" type="submit" formaction="/details?redirect=true" formmethod="POST">Update & Overview</button>
<button id="overviewButton" form="overviewForm" type="submit"> Overview </button>
