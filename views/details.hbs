    <form id='updateEntryForm' action='/details{{#if data}} /{{data._id}} {{else}} {{/if_eq}}' method='post'>

		{{#if data}} <input type='hidden' name='_method' value='put'> {{else}} {{/if_eq}}

        <label for='title'>Title:</label>
        <input
			type='text'
			id='title'
			name='noteTitle'
			maxlength='64'
			required
			{{#if data}} value='{{data.title}}' {{else}} {{/if_eq}}
        />

        <label for='importance'>Importance (1-5):</label>
        <input
                type='number'
                id='importance'
                name='noteImportance'
                min='1'
                max='5'
                required
                {{#if data}} value='{{data.importance}}' {{else}} {{/if_eq}}
        />

        <label for='date'>Due Date:</label>
        <input
			type='date'
			id='date'
			name='noteDueDate'
            {{#if data}} value='{{data.dueDate}}' {{else}} {{/if_eq}}
        />

		<div class='checkbox-container'>
			{{#if data}} 
				<input type='checkbox' id='state' name='noteState' value='{{get_EntryState_Completed}}' {{#if_eq this.state (get_EntryState_Completed)}} checked {{else}} {{/if_eq}} />
			{{else}}
				<input type='checkbox' id='state' name='noteState' value='{{get_EntryState_Completed}}' />
			{{/if_eq}}
			<label for='state'>Finished</label>
		</div>

        <label for='description'>Description:</label>
        <input type="text" id='description' name='noteDescription' maxlength="256" {{#if data}} value='{{data.description}}' {{else}} {{/if_eq}}>

        {{#if data}} 
        	<input type='submit' name='update_button' value='Update' />
        	<input
                	type='submit'
                	name='update_overview_button'
            	    value='Update & Overview'
        	/>
        {{else}}
			<input type='submit' name='create_button' value='Create' />
			<input
				type='submit'
				name='create_overview_button'
				value='Create & Overview'
			/>
        {{/if_eq}}
    </form>
