<style>
    form { display: flex; flex-direction: column; align-items: flex-start;
    margin: 20px; } label { width: 100%; } input[type="checkbox"] { margin-left:
    0; } input, textarea { width: 100%; } button { margin-top: 10px; }
    .checkbox-container {
        display: flex;
        align-items: center;
        justify-content: flex-start;
    }
    input[type="checkbox"] {
        margin-left: 0;
        margin-right: 5px;
    }
</style>

<form id='updateEntryForm' action='/details' method='post'>
    <label for='title'>Title:</label>
    <input type='text' id='title' name='noteTitle' maxlength="64" required />

    <label for='importance'>Importance (1-5):</label>
    <input
        type='number'
        id='importance'
        name='noteImportance'
        min='1'
        max='5'
        required
    />

    <label for='date'>Due Date:</label>
    <input type='date' id='date' name='noteDueDate' />

    <div class='checkbox-container'>
        <input type='checkbox' id='state' name='noteState' value='{{get_EntryState_Completed}}' />
        <label for='state'>Finished</label>
    </div>

    <label for='description'>Description:</label>
    <input type="text" id='description' name='noteDescription' maxlength="256">

   <!--------------------------------------------------------------------------------------------------------------------->
    <input type='submit' name='create_button' value='Create' />
    <input
            type='submit'
            name='create_overview_button'
            value='Create & Overview'
    />

</form>
